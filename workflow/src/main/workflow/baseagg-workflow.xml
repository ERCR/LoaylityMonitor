<workflow-app name="baseAgg-workflow" xmlns="uri:oozie:workflow:0.2">

    <start to="runAgg" />

    <action name="runAgg">
        <shell xmlns="uri:oozie:shell-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>echo "Hello world"</exec>
        </shell>

        <ok to="example-workflow-end" />
        <error to="kill" />
    </action>


    <kill name="kill">
        <message>Workflow failed with error message ${wf:errorMessage()}
        </message>
    </kill>

    <end name="example-workflow-end" />


</workflow-app>